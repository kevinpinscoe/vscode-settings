{
  // Files auto save
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 100,

  // Editor
  "editor.fontSize": 16,
  "editor.inlineSuggest.suppressSuggestions": true,
  "editor.accessibilitySupport": "off",

  // Explorer
  "explorer.confirmDelete": false,

  // Redhat
  "redhat.telemetry.enabled": false,

  // Shell env
  "application.shellEnvironmentResolutionTimeout": 30,

  // Go
  "go.toolsManagement.autoUpdate": true,

  // Cody AI
  "cody.commandCodeLenses": true,
  "cody.suggestions.mode": "off",

  // MSSQL
  "mssql.connectionGroups": [
    {
      "name": "ROOT",
      "id": "ED9F143E-6F3E-46E8-96DD-547681FB05B0"
    }
  ],
  "mssql.connections": [],

  // Spelling
  "cSpell.userWords": [
    "heavenlies"
  ],

  // Docker Compose
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },

  // GitHub Actions
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },

  // Wrapping / Rulers
  "editor.rulers": [90],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 90,

  // Let Rewrap follow the ruler (90)
  "rewrap.wrappingColumn": 0,

  // Markdown
  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 90
  },
  "terraform.languageServer.path": "/opt/homebrew/bin/terraform-ls"
}
